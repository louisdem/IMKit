SubDir IMKIT_TOP protocols MSN ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;
SubDirHdrs [ FDirName $(IMKIT_OPENSSL_INCDIR) ] ;

Addon msn :
	# MSN
	MSN.cpp
	MSNConnection.cpp
	MSNManager.cpp
	Command.cpp
	HTTPFormatter.cpp
	MSNSBConnection.cpp
	MSNObject.cpp
	P2PContents.cpp
	P2PHeader.cpp
	Buddy.cpp
	: be stdc++.r4 network im ssl crypto
	: MSN.rdef
;

Depends msn : libim.so ;

LINKFLAGS on msn += -L$(IMKIT_OPENSSL_LIBDIR) -L$(IMKIT_TOP)/libim $(IMKIT_TOP)/server/im_server ;
