SubDir IMKIT_TOP protocols GoogleTalk ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;
SubDirHdrs [ FDirName $(IMKIT_TOP) protocols Jabber ] ;
SubDirHdrs [ FDirName $(IMKIT_TOP) libs ] ;
SubDirHdrs [ FDirName $(IMKIT_TOP) libs libjabber ] ;
SubDirHdrs [ FDirName $(IMKIT_OPENSSL_INCDIR) ] ;

Addon gtalk :
	GoogleTalk.cpp
	: be stdc++.r4 im libexpat.a libjabber.a ssl crypto
	: GoogleTalk.rdef
;

if $(IMKIT_IS_HAIKU)  = 1 {
	LINKFLAGS on gtalk += -lnetwork ;
}

if $(IMKIT_IS_BEOS) = 1 {
	LINKFLAGS on gtalk += -lsocket ;
}

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on gtalk += -lsocket -lbind ;
	SubDirHdrs /boot/develop/headers/be/bone ;
}

LINKFLAGS on gtalk += -L$(IMKIT_OPENSSL_LIBDIR) -L$(IMKIT_TOP)/libim $(IMKIT_TOP)/server/im_server ;

InstallFile $(IMKIT_COMMON_ADDONS_DIRECTORY)/imkit : gtalk ;
