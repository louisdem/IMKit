SubDir IMKIT_TOP Preflet ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Executable InstantMessaging :
	# preflet
	main.cpp
	PApplication.cpp
	PWindow.cpp
	: be stdc++.r4 translation textencoding im libcommon.a
	: preflet.rdef
;

LINKFLAGS on InstantMessaging += -L$(IMKIT_TOP)/libim ;

InstallBin $(IMKIT_BEOS_PREFERENCES_DIRECTORY) : InstantMessaging ;
