SubDir IMKIT_TOP server ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Executable im_server :
	im_server.cpp
	im_server_main.cpp
	Protocol.cpp
	QueryLooper.cpp
	: be stdc++.r4 translation textencoding im libcommon.a
	: im_server.rdef ContactStatusIcons.rdef Icons.rdef DeskbarIcons.rdef
;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on im_server += -lzeta -ltracker ;
}

LINKFLAGS on im_server += -L$(IMKIT_TOP)/libim ;

InstallFile $(IMKIT_COMMON_SERVERS_DIRECTORY) : im_server ;
