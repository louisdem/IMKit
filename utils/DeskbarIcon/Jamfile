SubDir IMKIT_TOP utils DeskbarIcon ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Addon IMDeskbarIcon :
	DeskbarIcon.cpp
	AwayMessageWindow.cpp
	QueryLooper.cpp
	: be stdc++.r4 im libcommon.a
	: IMDeskbarIcon.rsrc
;

LINKFLAGS on IMDeskbarIcon += -L$(IMKIT_TOP)/libim ;
