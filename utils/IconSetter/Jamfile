SubDir IMKIT_TOP utils IconSetter ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Executable IconSetter :
	main.cpp
	: be translation im
;

LINKFLAGS on IconSetter += -L$(IMKIT_TOP)/libim ;

InstallBin $(IMKIT_APPS_DIRECTORY)/im_kit : IconSetter ;
